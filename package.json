{
  "name": "alexlimh-personal-site",
  "version": "2.0.0",
  "description": "Modern academic personal website for Minghan Li",
  "repository": {
    "type": "git",
    "url": "git://github.com/alexlimh/alexlimh.github.io.git"
  },
  "keywords": [
    "jekyll",
    "academic",
    "personal-site",
    "research"
  ],
  "author": "Minghan Li",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexlimh/alexlimh.github.io/issues"
  },
  "homepage": "https://alexlimh.github.io",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 7.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "terser": "^5.19.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6"
  },
  "scripts": {
    "build:js": "terser assets/js/plugins/*.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "build:css": "sass assets/css/main.scss:assets/css/main.css --style=compressed --source-map",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "watch:css": "onchange \"assets/css/**/*.scss\" \"_sass/**/*.scss\" -- npm run build:css",
    "build": "npm-run-all build:*",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "bundle exec jekyll serve --livereload",
    "clean": "rm -rf _site .sass-cache .jekyll-cache .jekyll-metadata",
    "install-deps": "bundle install && npm install"
  }
}
